<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/cl_radio_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/ll_bottom_play"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/ll_bottom_play"
            android:layout_marginEnd="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/ll_bottom_play"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/tl_bottom_tab" />
        <Constraint
            android:id="@+id/fl_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/ll_bottom_play"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/tl_bottom_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/ll_bottom_play_touch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@id/ll_bottom_play"
            android:layout_marginEnd="60dp"
            app:layout_constraintTop_toTopOf="@id/ll_bottom_play" />
        <Constraint
            android:id="@+id/fab_chatbot"
            android:elevation="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="66dp"
            app:layout_constraintBottom_toTopOf="@id/tl_bottom_tab"
            android:layout_marginEnd="16dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/cl_radio_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/ll_bottom_play"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_editor_absoluteY="567dp" />
        <Constraint
            android:id="@+id/ll_bottom_play"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/fl_main"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toTopOf="@id/ll_bottom_play"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/tl_bottom_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="parent" />
        <Constraint
            android:id="@+id/ll_bottom_play_touch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="parent"
            android:layout_marginEnd="60dp" />
        <Constraint
            android:id="@+id/fab_chatbot"
            android:elevation="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="66dp"
            app:layout_constraintBottom_toTopOf="@id/ll_bottom_play"
            android:layout_marginEnd="16dp"
            android:visibility="gone" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchRegionId="@id/ll_bottom_play_touch" />

        <KeyFrameSet >
            <KeyAttribute
                app:motionTarget="@+id/cl_radio_container"
                app:framePosition="70"
                android:alpha="0.6" />
            <KeyAttribute
                app:motionTarget="@+id/cl_radio_container"
                app:framePosition="50"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/cl_radio_container"
                app:framePosition="0"
                android:alpha="0" />
        </KeyFrameSet>
    </Transition>


</MotionScene>

