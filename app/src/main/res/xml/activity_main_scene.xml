<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/empty">
        <Constraint
            android:id="@+id/fl_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/ll_bottom_play"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/iv_radio_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tl_bottom_tab" />
        <Constraint
            android:id="@+id/tv_radio_title"
            app:layout_constraintStart_toEndOf="@id/iv_radio_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/iv_radio_back_btn"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/tl_bottom_tab" />
        <Constraint
            android:id="@+id/rv_channel_list"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/v_line2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" />
        <Constraint
            android:id="@+id/v_line2"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@id/v_line" />
        <Constraint
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/ll_radio_channels"
            android:layout_marginTop="-1dp" />
        <Constraint
            android:id="@+id/tv_favorite_notify"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="200dp" />
        <Constraint
            android:id="@+id/ll_radio_channels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/tl_bottom_tab" />
        <Constraint
            android:id="@+id/tl_bottom_tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/ll_bottom_play"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@id/tl_bottom_tab"
            android:visibility="gone"/>
        <Constraint
            android:id="@+id/cl_radio_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/ll_bottom_play"
            app:layout_constraintBottom_toBottomOf="@id/ll_bottom_play"
            android:visibility="invisible" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/fl_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/ll_bottom_play"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/iv_radio_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tl_bottom_tab" />
        <Constraint
            android:id="@+id/tv_radio_title"
            app:layout_constraintStart_toEndOf="@id/iv_radio_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/iv_radio_back_btn"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/tl_bottom_tab" />
        <Constraint
            android:id="@+id/rv_channel_list"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/v_line2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" />
        <Constraint
            android:id="@+id/v_line2"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@id/v_line" />
        <Constraint
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/ll_radio_channels"
            android:layout_marginTop="-1dp" />
        <Constraint
            android:id="@+id/tv_favorite_notify"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="200dp"
            app:layout_constraintTop_toBottomOf="@id/v_line2" />
        <Constraint
            android:id="@+id/ll_radio_channels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/tl_bottom_tab" />
        <Constraint
            android:id="@+id/tl_bottom_tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/ll_bottom_play"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/tl_bottom_tab" />
        <Constraint
            android:id="@+id/cl_radio_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/ll_bottom_play"
            app:layout_constraintBottom_toBottomOf="@id/ll_bottom_play"
            android:visibility="invisible"
            android:layout_marginEnd="50dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/fl_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tl_bottom_tab" />
        <Constraint
            android:id="@+id/cl_radio_container"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/rv_channel_list"
            app:layout_constraintBottom_toBottomOf="@id/ll_bottom_play"
            app:layout_constraintBottom_toTopOf="@id/ll_bottom_play" />
        <Constraint
            android:id="@+id/fab_chatbot"
            android:elevation="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="66dp"
            app:layout_constraintBottom_toTopOf="@id/ll_bottom_play"
            android:layout_marginEnd="16dp"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/tl_bottom_tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="parent" />
        <Constraint
            android:id="@+id/tv_favorite_notify"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="200dp"
            app:layout_constraintTop_toBottomOf="@id/v_line2" />
        <Constraint
            android:id="@+id/iv_radio_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp" />
        <Constraint
            android:id="@+id/tv_radio_title"
            app:layout_constraintStart_toEndOf="@id/iv_radio_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/iv_radio_back_btn"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/iv_radio_back_btn" />
    </ConstraintSet>

    <Transition
        android:id="@+id/trs_basic"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start">
        <OnClick
            app:targetId="@id/ll_bottom_play"/>
        <OnSwipe
            app:touchRegionId="@id/cl_radio_container"
            app:dragDirection="dragUp"/>
        <KeyFrameSet >
            <KeyAttribute
                app:motionTarget="@id/iv_radio_back_btn"
                app:framePosition="0"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@id/iv_radio_back_btn"
                app:framePosition="80"
                android:alpha="0.1" />

            <KeyAttribute
                app:motionTarget="@+id/rv_channel_list"
                app:framePosition="0"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/rv_channel_list"
                app:framePosition="80"
                android:alpha="0.1" />

            <KeyAttribute
                app:motionTarget="@id/ll_radio_channels"
                app:framePosition="0"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@id/ll_radio_channels"
                app:framePosition="80"
                android:alpha="0.1" />

            <KeyAttribute
                app:motionTarget="@id/iv_radio_back_btn"
                app:framePosition="0"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@id/iv_radio_back_btn"
                app:framePosition="80"
                android:alpha="0.1" />

            <KeyAttribute
                app:motionTarget="@+id/tv_radio_title"
                app:framePosition="0"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/tv_radio_title"
                app:framePosition="80"
                android:alpha="0.1" />

            <KeyAttribute
                app:motionTarget="@+id/v_line"
                app:framePosition="0"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/v_line"
                app:framePosition="80"
                android:alpha="0.1" />

            <KeyAttribute
                app:motionTarget="@+id/ll_bottom_play"
                app:framePosition="50"
                android:alpha="0.2" />

            <KeyAttribute
                app:motionTarget="@id/tl_bottom_tab"
                app:framePosition="50"
                android:alpha="0.2" />


            <KeyAttribute
                app:motionTarget="@+id/v_line2"
                app:framePosition="0"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/v_line2"
                app:framePosition="80"
                android:alpha="0.1" />

            <KeyAttribute
                app:motionTarget="@+id/tv_favorite_notify"
                app:framePosition="0"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/tv_favorite_notify"
                app:framePosition="95"
                android:alpha="0.01" />

            <KeyAttribute
                app:motionTarget="@+id/fl_main"
                app:framePosition="80"
                android:alpha="0.1" />
            <KeyAttribute
                app:motionTarget="@+id/fl_main"
                app:framePosition="100"
                android:alpha="0" />


        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/trs_empty"
        app:constraintSetEnd="@id/empty"
        app:constraintSetStart="@id/empty">
    </Transition>

</MotionScene>

